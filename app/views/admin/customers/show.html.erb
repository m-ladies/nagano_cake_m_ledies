<div class="container my-5">
  <div class="row">
    <h2>会員情報 詳細</h2>
  </div>

  <div class="row mt-3">
      <table class="table table-borderless">
        <tbody>
          <tr>
            <td>顧客ID</td>
            <td><%= @customer.id %>
            </div>
            </td>
          </tr>

          <tr>
            <td>氏名</td>
            <td><%= @customer.last_name %>
              <%= @customer.first_name %></td>
          </tr>

          <tr>
            <td>フリガナ</td>
            <td><%= @customer.last_name_kana %>
              <%= @customer.first_name_kana %></td>
          </tr>

          <tr>
            <td>郵便番号</td>
            <td><%= @customer.postal_code %></td>
          </tr>

          <tr>
            <td>住所</td>
            <td><%= @customer.address %></td>
          </tr>

          <tr>
            <td>電話番号</td>
            <td><%= @customer.telephone_number %></td>
          </tr>

          <tr>
            <td>メールアドレス</td>
            <td><%= @customer.email %></td>
            </tr>
            
           <tr>
            　<td>ステータス</td>
            　<td><% if @customer.is_deleted == true %>
             	　有効
				<% else %>
				   退会
				<% end %>
			　</td>
           </tr>
        </tbody>
      </table>
　　<div class="col-sm-3 my-auto">
      <%= link_to "編集する", edit_admin_customer_path, class: "btn btn-success" %>
      <%= link_to "注文履歴一覧を見る", admin_root_path, class: "btn btn-primary mt-5" %>
   </div>
</div>
 　　　
    