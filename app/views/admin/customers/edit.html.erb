<div class="row">
  <div class = "container">
			<h2><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集</h2>
  
  <%= form_with model: @customer, url:admin_customer_path(@customer), local: true do |f| %>
  
        <div class="form-group row">
          <%= f.label :会員id,class: "col-sm-4" %>
          <%= f.label @customer.id, class: "col-sm-8" %>
        </div>

        <div class="form-group row">
          <%= f.label :氏名, class: "col-sm-4" %>
          <%= f.text_field :last_name, class: "form-control col-sm-4" %>
          <%= f.text_field :first_name, class: "form-control col-sm-4" %>
        </div>

        <div class="form-group row">
          <%= f.label :フリガナ, class: "col-sm-4" %>
          <%= f.text_field :last_name_kana, class: "form-control col-sm-4" %>
          <%= f.text_field :first_name_kana, class: "form-control col-sm-4" %>
        </div>

        <div class="form-group row">
          <%= f.label :郵便番号, class: "col-sm-4" %>
          <%= f.text_field :postal_code, class: "form-control col-sm-8" %>
        </div>

        <div class="form-group row">
          <%= f.label :住所, class: "col-sm-4" %>
          <%= f.text_field :address, class: "form-control col-sm-8" %>
        </div>

        <div class="form-group row">
          <%= f.label :電話番号, class: "col-sm-4" %>
          <%= f.text_field :telephone_number, class: "form-control col-sm-8" %>
        </div>

        <div class="form-group row">
          <%= f.label :メールアドレス, class: "col-sm-4" %>
          <%= f.email_field :email, class: "form-control col-sm-8" %>
        </div>

        <div class="row">
          <%= f.label :会員ステータス, class: "ml-3" %>
          <div class="form-check ml-4">
            <%= f.radio_button :is_deleted, :true %>
            <%= f.label :is_deleted, "有効会員" %>
            <%= f.radio_button :is_deleted, :false %>
            <%= f.label :is_deleted, "退会済み" %>
          </div>
        </div>

        <div class="row">
          <%= f.submit "変更を保存", class: "btn btn-success" %>
        </div>
      <% end %>
  </div>
</div>
