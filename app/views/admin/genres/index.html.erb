<div class="container">

   <h2>ジャンル一覧・追加</h2>
   <!--ジャンル追加フォーム-->
   <div class="row">
    <%= form_with url:admin_genres_path, model:@genre_new, local:true do |f| %>
     <span>ジャンル名</span>
     <%= f.text_field :name %>
     <%= f.submit "新規登録", class: "btn btn-success" %>
    <% end %>
   </div>
   <!--ジャンル一覧-->
   <div class="row">
   <div class="col-lg-4">
    <table class="table">
     <thead class="thead-light">
      <tr>
       <th>ジャンル</th>
      </tr>
     </thead>
     <tbody>
      <% @genres.each do |genre| %>
       <tr>
        <td class="genre_name"><%= link_to genre.name %></td>
        <td><%= link_to "編集する", edit_admin_genre_path(genre), class: "btn btn-success" %></td>
       </tr>
      <% end %>
     </tbody>
    </table>
   </div>
  </div>
 </div>