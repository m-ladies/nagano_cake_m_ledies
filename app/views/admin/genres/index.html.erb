<div class="container">
 <% if @genre.errors.any? %>
  <%= @genre.errors.count %>件のエラーが発生しました
   <% @genre.errors.full_messages.each do |message| %>
   <%= message %>
  <% end %>
<% end %>
 <div class="row">
  <div class="col-md-3" style="margin: 30px 0 30px 0;">
   <h3 style="background-color: #eeeeee;">ジャンル一覧・追加</h3>
   </div>
   </div>
   <!--ジャンル追加フォーム-->
    <%= form_with url:admin_genres_path, model:@genre, local:true do |f| %>
    <!--rowにform入れると縦に並んでしまうから注意-->
    <div class="row" style="margin: 20px 0 35px 0;">
    <div class="col-md-2 text-center">
     <h6>ジャンル名</h6>
     </div>
     <div class="col-md-4">
     <%= f.text_field :name, :size=>"30×5" %>
     </div>
     <div class="col-md-3">
     <%= f.submit "新規登録", :class => "btn btn-outline-secondary btn-block" %>
     </div>
    <% end %>
   </div>
   <!--ジャンル一覧-->
   <div class="row">
   <div class="col-lg-4">
    <table class="table border-dark">
          <div class="text-center" style="padding-top: 20px; height: 55px; background-color: #eeeeee;">ジャンル</div>
     <tbody>
      <% @genres.each do |genre| %>
       <tr>
        <td class="genre_name"><%= link_to genre.name %></td>
        <td><%= link_to "編集する", edit_admin_genre_path(genre), :class => "btn btn-outline-secondary btn-block" %></td>
       </tr>
      <% end %>
     </tbody>
    </table>
   </div>
  </div>
 </div>