<div class=“row”>
   <h1>商品一覧</h1>
   <span><%= link_to "商品追加", new_admin_item_path, class: "btn btn-success" %></span>
     <table class='table table-hover table-inverse'>
       <thead>
         <tr class="info">
           <th>商品ID</th>
           <th>商品名</th>
           <th>税抜価格</th>
           <th>ジャンル</th>
           <th>ステータス</th>
         </tr>
      </thead>
      <tbody>
        <% @items.each do |item| %>
             <tr>
                 <td><%= item.id %></td>
                 <td><%= link_to item.name, admin_item_path(item.id), class: "text-dark" %></td>
                 <td><%= item.price %></td>
                 <td><%= item.genre.name %></td>
                 <td>
                     <% if item.is_active == true %>
                         販売中
                     <% else %>
                         販売停止中
                     <% end %>
                 </td>
             </tr>
        <% end %>
        <!--kaminari記述-->
		<%= paginate @items %>
	 </tbody>
	</table>
</div>