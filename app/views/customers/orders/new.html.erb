<div class="container">
  <div class="row mt-5">
    <div class="col-md-2"></div>
    <div class="col-md-3 text-center">
      <h2 style="background-color: #cd5c5c; color: white;">注文情報入力</h2>
    </div>
  </div>
  
    <%# render "layouts/error_messages", resource: @order%>
  <%# if current_customer.items.present? %>

    <%= form_with model: @order, url: log_customers_orders_path, method: :post, local:true do |f| %>

          <div class="row">
            <div class="col-md-1"></div>
              <div class="col-md-10">
                <div class="row mt-2">
                  <div class="col-md-3">
                    <h2><strong>支払方法</strong></h2>
                  </div>
                </div>

                <div class="row">
                  <div class="col-md-1"></div>
                  <div class="col-md-11 text-left">
                    <h5 style="font-size: 25px;">
                      <%= f.radio_button :payment_method, "クレジットカード", checked: true %>
                      <%= f.label "クレジットカード" %>
                      <br>
                      <%= f.radio_button :payment_method, "銀行振込" %>
                      <%= f.label "銀行振込" %>
                    </h5>
                  </div>
                </div>
                
                <div class="row mt-2">
                  <div class="col-md-3">
                    <h2><strong>お届け先</strong></h2>
                  </div>
                </div>

                <div class="row">
                  <div class="col-md-1"></div>
                  <div class="col-md-11 text-left">
                    <h5 style="font-size: 25px;">
                      <%= f.radio_button :address_status, "0", checked: true %>
                      <%= f.label :address, :"ご自身の住所" %>
                    </h5>

                    <div class="col-md-11 text-left" style="margin-left: 20px;">
                      <h5 style="font-size: 25px;">
                        〒<%= current_customer.postal_code %>
                          <%= current_customer.address %><br>
                          <%#= current_customer.name %>
                      </h5>
                    </div>
                  </div>
                </div>
                 <div class="row mt-4">
                  <div class="col-md-1"></div>
                  <div class="col-md-11 text-left">
                    <h5 style="font-size: 25px;">
                      <%= f.radio_button :address_status, "1" %>
                      <%= f.label :address, :"登録済住所から選択" %>
                    </h5>

                    <div class="col-md-11 text-left" style="margin-left: 20px; font-size: 25px;">
                      <%= f.select :address_id, current_customer.addresses.map{|a| [a.address, a.id]} %>
                    </div>
                  </div>
                </div>
                
                <div class="row mt-4">
                  <div class="col-md-1"></div>
                  <div class="col-md-11 text-left">
                    <h5 style="font-size: 25px;">
                      <%= f.radio_button :address_status, "2" %>
                      <%= f.label :address, :"新しいお届け先" %>
                    </h5>

                      <div class="row" style="font-size: 16px; margin-left: 20px;">
                        <div class="col-md-3 text-left">
                          <%= f.label "郵便番号(ハイフンなし)" %>
                        </div>
                        <div class="col-md-5 text-left">
                          <%= f.text_field :postal_code, aurofocus: true, placeholder: "0000000", size: 25 %>
                        </div>
                      </div>
                    <div class="row" style="font-size: 16px; margin: 10px 0 0 20px;">
                        <div class="col-md-3 text-left">
                          <%= f.label :住所 %>
                        </div>
                        <div class="col-md-5 text-left" style="margin-left: 4px;">
                          <%= f.text_field :address, aurofocus: true, placeholder: "東京都新宿区新宿0-0", size: 57 %>
                        </div>
                      </div>

                      <div class="row" style="font-size: 16px; margin: 10px 0 0 20px;">
                        <div class="col-md-3 text-left">
                          <%= f.label :宛名 %>
                        </div>
                        <div class="col-md-5 text-left" style="margin-left: 4px;">
                          <%= f.text_field :name, autofocus: true, placeholder: "令和花子", size: 25 %>
                        </div>
                      </div>
                  </div>
                </div>
                <div class="row my-3">
                  <div class="col-md-12 text-center">
                    <%= f.submit "確認画面へ進む", class: "btn btn-lg btn-primary" %>
                  </div>
                </div>
    <% end %>
      </div>
    <div class="col-md-1"></div>
  </div>
</div>

  <%# else %>
      <!-- if カートアイテムがない時 -->
  <!--    <p>お客様のショッピングカートに商品はありませんので注文情報の入力ができません。</p>-->
  <!--    <p><%#= link_to "商品一覧", customers_items_path, class: "btn btn-warning" %>から商品をお探し下さい。</p>-->
  <!--<%# end %>-->
  </div>
</div>
