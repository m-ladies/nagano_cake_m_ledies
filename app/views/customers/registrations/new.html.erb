<div class="container">
  <div class="row">
    <div class="col-md-2 text-center" style="margin: 30px 0 35px 0;">
      <h5 style="background-color: #cd5c5c; color: white;">新規会員登録</h5>
    </div>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "customers/shared/error_messages", resource: resource %>
      <%= resource.class.name %>

      <div class="field">
        <%= f.label :"名前", class: "col-sm-2 control-label" %>
        <%= f.label :"(姓)", class: "col-sm-2 control-label" %>
        <%= f.text_field :last_name, autofocus: true, class: "col-sm-3 form-control-static name" %>
        <%= f.label :"(名)", class: "col-sm-1 control-label" %>
        <%= f.text_field :first_name, autofocus: true, class: "col-sm-3 form-control-static name" %>
      </div>
      
      <div class="field">
        <%= f.label :"フリガナ", class: "col-sm-2 control-label" %>
        <%= f.label :"(セイ)", class: "col-sm-2 control-label" %>
        <%= f.text_field :last_name_kana, autofocus: true, class: "col-sm-3 form-control-static name" %>
        <%= f.label :"(メイ)", class: "col-sm-2 control-label" %>
        <%= f.text_field :first_name_kana, autofocus: true, class: "col-sm-3 form-control-static name" %>
      </div>
      
      <div class="field">
        <%= f.label :"メールアドレス", class: "col-sm-4 control-label" %>
        <%= f.email_field :email, autofocus: true, class: "col-sm-3 form-control-static name" %>
      </div>
      
      <div class="field">
        <%= f.label :"郵便番号（ハイフンなし）", class: "col-sm-4 control-label" %>
        <%= f.text_field :postal_code, autofocus: true, class: "col-sm-3 form-control-static name" %>
      </div>
      
      <div class="field">
        <%= f.label :"住所", class: "col-sm-4 control-label" %>
        <%= f.text_field :address, autofocus: true, class: "col-sm-6 form-control-static name" %>
      </div>
      
      <div class="field">
        <%= f.label :"電話番号（ハイフンなし）", class: "col-sm-4 control-label" %>
        <%= f.text_field :telephone_number, autofocus: true, class: "col-sm-3 form-control-static name" %>
      </div>

      <div class="field">
        <%= f.label :"パスワード(6文字以上)", class: "col-sm-4 control-label" %>
        <%= f.password_field :password, autocomplete: "new-password", class: "col-sm-4 form-control-static" %>
      </div>

      <div class="field">
        <%= f.label :"パスワード(確認用)", class: "col-sm-4 control-label" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "col-sm-4 form-control-static" %>
      </div>


      <div class="actions">
        <%= f.submit "新規登録",class: 'btn btn-success btn-lg col-xs-7' %>
      </div>
    <% end %>

      <div class="row">
        <div class="col- text-center" style="margin: 30px 0 35px 0;">
          <h5 style="background-color: #cd5c5c; color: white;">既に登録済みの方</h5>
        </div>
      </div>
       <p class="col-md-4 text-center"><%= link_to 'こちら', new_customer_session_path %> からログインしてください</p>
      </div>
  </div>
</div>

   

