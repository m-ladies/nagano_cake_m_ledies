<div class="containa">
    <div class="row">
        <div class="col-xs-1">
           <div class="col-xs-10">
            <p>ショッピングカート</p>
            <p><%= link_to "カートを空にする",  all_destroy_customers_cart_items_path, method: :delete, class: "btn btn-danger" %></p>

                <table class="table table-bordered">
                    <thead　class="active">
                        <tr>
                            <th>商品名</th>
                            <th>単価（税込）</th>
                            <th>数量</th>
                            <th>小計</th>
                            <th></th>
                        </tr>
                    </thead>

                    <tbody>
                    <% @sum = 0 %>
                    <% @cart_items.each do |cart_item| %>
                        <tr>
                            <td><%= cart_item.item.name %></td>
                            <td><%= cart_item.item.price %></td>
                            <td>
                                <%= form_with model: cart_item, url: customers_cart_item_path(cart_item.id), local:true do |f| %>
                                <%= f.number_field :amount %>

                                <%= f.hidden_field :item_id, :value => cart_item.item.id %>
                                <%= f.submit "変更" %>
                            </td>

                            <td><%= cart_item.amount * cart_item.item.price %></td>
                            <td><%= link_to "削除する", customers_cart_item_path(cart_item), method: :delete, class: "btn btn-danger", data: {confirm: "削除しますか？"} %></td>
                            <% @sum += cart_item.item.price * cart_item.amount %>
                                <% end %>
                        </tr>
                    <% end %>
                    </tbody>
                </table>
           </div>

            <div class="row">
                <div class="col-xs-2"><%= link_to "買い物を続ける", root_path, class: "btn btn-info" %></div>
                <div class="col-xs-6"></div>
                <div class="col-xs-2">合計金額</div>
                <div class="col-xs-2"><%= @sum %></div>
            </div>

            <div class="row">
                <div class="col-xs-4"></div>

                <div class="col-xs-4"><%= link_to "情報入力に進む", class: "btn btn-success" %></div>
                <div class="col-xs-4"></div>
            </div>
        </div>
    </div>
</div>
