<div class="container">
  <div class="row" style="margin: 30px 0 40px 0;">
    <div class="col-md-2"></div>

    <div class=" col-md-9">
      <div class="row">
        <div class="col-md-3 text-left">
          <p><strong style="font-size: 26px;">商品一覧</strong>（全<%= @items.count %>件）</p>
        </div>
      </div>
      <div class="row">
        <% @items.each do |item| %>
          <div class="row" style="margin-top: 5px;">
            <div class="col-md-12" style="margin: 10px;">
              <div class="row">
                <div class="col-md-12 text-left">
                  <%= link_to customers_item_path(item.id) do %>
                    <%= attachment_image_tag item, :image, :fill, 170, 100, format: 'jpeg', fallback: "no_image.jpg", size: "170x100" %>
                  <% end %>
                </div>
              </div>
              <div class="row">
                <div class="col-md-12 text-left" style="margin-top: 20px;">
                  <strong><p><%= item.name %></p></strong>
                </div>
              </div>
              <div class="row">
                <div class="col-md-12 text-left">
                  <strong><p>￥<%= item.unit_price.to_s(:delimited) %></p></strong>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
      <div class="row">
        <div class="col-md-4">
        </div>
        <div class="col-md-8">
          <%= paginate @items %>
        </div>
      </div>
    </div>

    <div class="col-md-1"></div>
  </div>
</div>
