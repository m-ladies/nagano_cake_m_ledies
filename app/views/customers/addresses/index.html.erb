<div class="container">
  <div class="row">
    <div class="col-md-1 text-left">
    </div>
    <div class="col-md-3 text-center" style="margin: 30px 0 35px 0;">
      <h5 style="background-color: #cd5c5c; color: white;">配送先登録/一覧</h5>
    </div>
  </div>
  
<% if @address.errors.any? %>
  <ul class="error_messages">
    <h3><%= @address.errors.count %>errors prohibited this user from being saved:</h3>
        <% @address.errors.full_messages.each do |message| %>
        <%= message %>
        <% end %>
  </ul>
<% end %>

  <%= form_with model: @address, url: customers_addresses_path, local:true do |f| %>
    <div class="row" style="font-size: 16px;">
      <div class="col-md-3 text-left">
        <%= f.label :郵便番号（ハイフンなし） %>
      </div>
      <div class="col-md-5 text-left">
        <%= f.text_field :postal_code, aurofocus: true, placeholder: "0000000", size: 25 %>
      </div>
    </div>

    <div class="row" style="font-size: 16px; margin-top: 10px;">
      <div class="col-md-3 text-left">
        <%= f.label :住所 %>
      </div>
      <div class="col-md-5 text-left">
        <%= f.text_field :address, aurofocus: true, placeholder: "東京都新宿区新宿0-0", size: 57 %>
      </div>
    </div>

    <div class="row" style="font-size: 16px; margin: 10px　0 40px 0;">
      <div class="col-md-3 text-left">
        <%= f.label :宛名 %>
      </div>
      <div class="col-md-5 text-left">
        <%= f.text_field :name, aurofocus: true, placeholder: "令和花子", size: 25 %>
      </div>
      <div class="col-md-1 text-right">
        <div class="actions">
          <%= f.submit "新規登録", class: "btn btn-lg btn-success w-60" %>
        </div>
      </div>
    </div>
  <% end %>
  <div class="row" style="margin: 60px 0;">
    <div class="col-md-8">
      <table class="table table-bordered border-dark">
        <thead class="table-secondary">
          <tr>
            <th style="width: 15%;">郵便番号</th>
            <th style="width: 40%;">住所</th>
            <th style="width: 15%;">宛名</th>
            <th colspan="3" style="width: 30%;"></th>
          </tr>
        </thead>
        <% @addresses.each do |address| %>
         <tbody>
           <td><%= address.postal_code %></td>
           <td><%= address.address %></td>
           <td><%= address.name %></td>
           <td><%= link_to "編集する", edit_customers_address_path(address), class: "btn btn-sm btn-success" %>
               <%= link_to "削除する", customers_address_path(address), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-sm btn-danger" %>
               </td>
         </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>
