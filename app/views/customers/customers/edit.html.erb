<div class="container">
<div class="row">
  <div class="col-xs-12">

    <h2 class="head-line title_h2 text-center">登録情報編集</h2>

    <% if @customer.errors.any? %>
    <ul class="error_messages">
      <h3><%= @customer.errors.count %>errors prohibited this user from being saved:</h3>
        <% @customer.errors.full_messages.each do |message| %>
        <%= message %>
        <% end %>
    </ul>
    <% end %>
   
    <%= form_with(model:@customer, url:customers_customer_path, local: true ,method: :put) do |f| %>

      <div class="col-xs-10">
        <div class="form-group col-xs-12">
          <%= f.label :"氏名", class: "col-sm-5 control-label" %>
          <%= f.text_field :last_name, class: "last_name col-sm-3 form-control-static name" %>
          <%= f.text_field :first_name, class: "first_name col-sm-3 form-control-static name" %>
        </div>
        <div class="form-group col-xs-12">
          <%= f.label :"フリガナ", class: "col-sm-5 control-label" %>
          <%= f.text_field :last_name_kana, class: "kana_last_name col-sm-3 form-control-static name" %>
          <%= f.text_field :first_name_kana, class: "kana_first_name col-sm-3 form-control-static name" %>
        </div>
        <div class="form-group col-xs-12">
          <%= f.label :"メールアドレス", class: "col-sm-5 control-label" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-sm-6 form-control-static" %>
        </div>
        <div class="form-group col-xs-12">
          <%= f.label :"郵便番号", class: "col-sm-5 control-label" %>
          <%= f.text_field :postal_code, class: "col-sm-4 form-control-static" %>
        </div>
        <div class="form-group col-xs-12">
          <%= f.label :"住所", class: "col-sm-5 control-label" %>
          <%= f.text_field :address, class: "col-sm-11 form-control-static" %>
        </div>
        <div class="form-group col-xs-12">
          <%= f.label :"電話番号(ハイフンなし)", class: "col-sm-5 control-label" %>
          <%= f.text_field :telephone_number, class: "col-sm-4 form-control-static" %>
        </div>
      </div>

      <div class="actions col-xs-9 col-xs-offset-3">
        <%= f.submit "編集内容を保存する", class: "btn btn-primary save col-xs-6" %>
        <%= link_to '退会する', quit_customers_customers_path, class: "glyphicon glyphicon-tint btn btn-danger"%>
      </div>
    <% end %>
    <div class="col-xs-12">
      <p>
      <%= link_to "戻る", customers_customer_path, class: "glyphicon glyphicon-home btn btn-info" %>
      </p>
    </div>
  </div>
</div>
</div>